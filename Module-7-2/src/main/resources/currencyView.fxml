<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.CurrencyController"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <Label text="Currency Converter" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="From:" />
        <TextField fx:id="fromCurrency" promptText="USD" />
        <Label text="To:" />
        <TextField fx:id="toCurrency" promptText="EUR" />
    </HBox>

    <HBox spacing="10">
        <Label text="Amount:" />
        <TextField fx:id="amountField" promptText="100" />
    </HBox>

    <Button text="Convert" onAction="#handleConvert" />

    <Label fx:id="resultLabel" text="Result will appear here" />
</VBox>
